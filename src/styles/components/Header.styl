header
  grid-area: header
  display: grid
  grid-template-columns: 80px 1fr 80px
  padding: 10px 0
  grid-gap: 20px
  .Header-logo
    font-size: 24px
    font-weight: bold
    display: flex
    justify-content: center
    align-items: center
    span 
      color: #FF565C
  .Header-nav
    ul
      list-style none
      padding-inline-start: 0
      display: flex;
      justify-content: space-evenly;
      a
        font-size: 14px
        opacity 0.2
        color: #1D1F24
        text-decoration: none
        font-family: 'Oswald', sans-serif
        font-weight: 400
      :hover
        opacity 1
@media screen and (max-width: 767px)
  header
    grid-template-columns: 80px 80px;
    justify-content: space-between;
    .Header-nav
      display: none